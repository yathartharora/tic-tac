                {
                    recv = checkforX(matrix);
                    if(recv>0)
                    {
                        if(recv==1)
                            matrix[0][0] = 'X';
                        else if(recv==2)
                            matrix[0][1] = 'X';
                        else if(recv==3)
                            matrix[0][2] = 'X';
                        else if(recv==4)
                            matrix[1][0] = 'X';
                        else if(recv==5)
                            matrix[1][1] = 'X';
                        else if(recv==6)
                            matrix[1][2] = 'X';
                        else if(recv==7)
                            matrix[2][0] = 'X';
                        else if(recv==8)
                            matrix[2][1] = 'X';
                        else if(recv==9)
                            matrix[2][2] = 'X';
                    }
                    else
                    {
                        if(checker==1)
                            matrix[0][0] = 'X';
                        else if(checker==2)
                            matrix[0][1] = 'X';
                        else if(checker==3)
                            matrix[0][2] = 'X';
                        else if(checker==4)
                            matrix[1][0] = 'X';
                        else if(checker==5)
                            matrix[1][1] = 'X';
                        else if(checker==6)
                            matrix[1][2] = 'X';
                        else if(checker==7)
                            matrix[2][0] = 'X';
                        else if(checker==8)
                            matrix[2][1] = 'X';
                        else if(checker==9)
