                {
                    cout<<"Sorry!!You Lost"<<endl;
                    cout<<"Try again!!"<<endl;
                    exit(0);
                }
                temp = 0;
            }
            break;
        case 2:
            
            for(i=0;i<5;i++)
            {
                flag = user_insert(matrix);
                if(flag==0)
                {
                    i = i - 1;
                    continue;
                }
                if(test==0)
                {
                    if(matrix[0][0]=='O' || matrix[0][2]=='O' || matrix[2][0]=='O' || matrix[2][2]=='O')
                    {
                        test = 1;
