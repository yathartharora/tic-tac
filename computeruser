void display(char a[][3])
{
    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++)
        {
                cout<<a[i][j];
        }
        cout<<endl;
    }
}

int user_insert(char a[][3])
{
    int x,y;
    cout<<"Enter the x-coordinate of your insertion";
    cin>>x;
    cout<<"Enter the y-coordinate of your insertion";
    cin>>y;
    if(a[x][y]=='.')
    {
        a[x][y] = 'O';
        return 1;
    }
    else
    {
        cout<<endl;
        cout<<"Sorry character already exists there..!!"<<endl;
        cout<<"Enter some another coordinate: \n"<<endl;
        cout<<endl;
        return 0;
    }
  return 0;
}

int check(char a[][3])   //checking for two consecutive O's
{
    int i,j,flag=0,add=0,count=0,x1=0,y1=0,counter=0;
    for(i=0;i<3;i++)   //checking row wise
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]=='O')
                count=count+1;
            if(a[i][j]=='.')
            {
                counter = 1;
                x1=i;
                y1=j;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
        count=0;
        counter = 0;
    }
    count=0;
    counter=0;
    for(i=0;i<3;i++)     //checking column wise
    {
        for(j=0;j<3;j++)
        {
            if(a[j][i]=='O')
                count=count+1;
            if(a[j][i]=='.')
            {
                counter = 1;
                x1=j;
                y1=i;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
        count=0;
        counter = 0;

    }
    count=0;
    counter=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]=='O' && i==j)
                count=count+1;
            if(a[i][j]=='.' && i==j)
            {
                counter=1;
                x1=i;
                y1=j;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
    }
    count=0;
    counter=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]=='O' && i+j==2)
                count=count+1;
            if(a[i][j]=='.' && i+j==2)
            {
                counter=1;
                x1=i;
                y1=j;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
    }
    if(flag==0)
        return 0;
    return 0;
}

int checkforX(char a[][3])  //checking for two consecutive X
{
    int i,j,flag=0,add=0,count=0,x1=0,y1=0,counter=0;
    for(i=0;i<3;i++)   //checking row wise
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]=='X')
                count=count+1;
            if(a[i][j]=='.')
            {
                counter = 1;
                x1=i;
                y1=j;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
        count=0;
        counter = 0;
    }
    for(i=0;i<3;i++)     //checking column wise
    {
        for(j=0;j<3;j++)
        {
            if(a[j][i]=='X')
                count=count+1;
            if(a[j][i]=='.')
            {
                counter = 1;
                x1=j;
                y1=i;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
        count=0;
        counter = 0;
    }
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]=='X' && i+j==2)
                count=count+1;
            if(a[i][j]=='.' && i+j==2)
            {
                counter=1;
                x1=i;
                y1=j;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
        //count=0;
    }
    if(flag==0)
        return 0;
    return 0;
}

int winner(char a[][3])  //checking for the winner
{
    int count=0,i,j;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]=='X')
                count=count+1;
        }
        if(count==3)
            return 1;
        count=0;
    }
    count=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[j][i]=='X')
                count=count+1;
        }
        if(count==3)
            return 1;
        count=0;
    }
    count=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[j][i]=='X' && i==j)
                count=count+1;
        }
        if(count==3)
            return 1;
        //count=0;
    }
    count=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]=='X' && i+j==2)
                count=count+1;
        }
        if(count==3)
            return 1;
        //count=0;
    }
    return 0;
}
