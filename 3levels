                            {
                                for(k=0;k<3;k++)
                                {
                                    if(matrix[i][k]=='.')
                                    {
                                        matrix[i][k]='X';
                                        temp = 1;
                                        break;
                                    }
                                }
                                if(temp==1)
                                    break;
                            }
                        }
                    }
                    else if(recv>0)
                    {
                        
                        if(recv==1)
                            matrix[0][0] = 'X';
                        else if(recv==2)
                            matrix[0][1] = 'X';
                        else if(recv==3)
                            matrix[0][2] = 'X';
