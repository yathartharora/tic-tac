                {
                    w = w - 1;
                    continue;
                }
                if(test==0)
                {
                    if(matrix[0][0]=='O' || matrix[0][2]=='O' || matrix[2][0]=='O' || matrix[2][2]=='O')
                    {
                        test = 1;
                        matrix[1][1] = 'X';
                        display(matrix);
                        continue;
                    }
                }
                test = 1;
                checker = check(matrix,'O');
                if(checker==0)
                {
                    recv = check(matrix,'X');
