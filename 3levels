#include <iostream>
using namespace std;
void display(char a[][3]);  //display the matrix
int user_insert(char a[][3]); //user's input
int check(char a[][3],char );  //checking for two consecutive O's
int winner(char a[][3],char ); //checking for the winner
void level3();
void level2();
void level1();
int choice,checker,i,w,k,j,temp=0,recv = 0,z=0,test=0,flag=0,qwerty=0,level;
char matrix[3][3];
int main()
{
    for(int i=0;i<3;i++)
        for(int j=0;j<3;j++)
            matrix[i][j]='.';
    cout<<"1.Beginner"<<endl;
    cout<<"2.Intermediate"<<endl;
    cout<<"3.Hard"<<endl;
    cout<<"Choose your level: ";
    cin>>level;
    switch(level)
    {
        case 1:
            level1();
            break;
        case 2:
            level2();
            break;
        case 3:
            level3();
            break;
        default:
            break;
    }
    return 0;
}


/* Display Function */

void display(char a[][3])
{
    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++)
        {
                cout<<a[i][j];
        }
        cout<<endl;
    }
}

/*Function to take input from user*/

int user_insert(char a[][3])
{
    int x,y;
    cout<<"Enter the x-coordinate of your insertion";
    cin>>x;
    cout<<"Enter the y-coordinate of your insertion";
    cin>>y;
    if(a[x][y]=='.')
    {
        a[x][y] = 'O';
        return 1;
    }
    else
    {
        cout<<endl;
        cout<<"Sorry character already exists there..!!"<<endl;
        cout<<"Enter some another coordinate: \n"<<endl;
        cout<<endl;
        return 0;
    }
  return 0;
}

/*Function to check two consecutive X's or 0's */

int check(char a[][3],char t)
{
    int i,j,flag=0,add=0,count=0,x1=0,y1=0,counter=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]==t)
                count=count+1;
            if(a[i][j]=='.')
            {
                counter = 1;
                x1=i;
                y1=j;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
        count=0;
        counter = 0;
    }
    count=0;
    counter=0;
    for(i=0;i<3;i++)     //checking column wise
    {
        for(j=0;j<3;j++)
        {
            if(a[j][i]==t)
                count=count+1;
            if(a[j][i]=='.')
            {
                counter = 1;
                x1=j;
                y1=i;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
        count=0;
        counter = 0;

    }
    count=0;
    counter=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]==t && i==j)
                count=count+1;
            if(a[i][j]=='.' && i==j)
            {
                counter=1;
                x1=i;
                y1=j;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
    }
    count=0;
    counter=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]==t && i+j==2)
                count=count+1;
            if(a[i][j]=='.' && i+j==2)
            {
                counter=1;
                x1=i;
                y1=j;
            }
        }
        if(count==2 && counter==1)
        {
            if(x1==0)
                add=1;
            else if(x1==1)
                add=3;
            else if(x1==2)
                add=5;
            flag=1;
            return x1+y1+add;
        }
    }
    if(flag==0)
        return 0;
    return 0;
}


int winner(char a[][3],char t)  //checking for the winner
{
    int count=0,i,j;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]==t)
                count=count+1;
        }
        if(count==3)
            return 1;
        count=0;
    }
    count=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[j][i]==t)
                count=count+1;
        }
        if(count==3)
            return 1;
        count=0;
    }
    count=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[j][i]==t && i==j)
                count=count+1;
        }
        if(count==3)
            return 1;
    
    }
    count=0;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            if(a[i][j]==t && i+j==2)
                count=count+1;
        }
        if(count==3)
            return 1;
    }
    return 0;
}

/* Game level 1 -- Easiest */

void level1()
{
    cout<<"1.Computer goes first"<<endl;
    cout<<"2.You go first"<<endl;
    cout<<"Enter choice"<<endl;
    cin>>choice;
    switch (choice)
    {
        case 1:
            matrix[0][0] = 'X';
            display(matrix);
            cout<<endl;
            for(j=0;j<4;j++)
            {
                flag = user_insert(matrix);
                if(flag==0)
                {
                    j=j-1;
                    continue;
                }
                z = winner(matrix,'O');
                if(z==1)
                {
                    display(matrix);
                    cout<<endl;
                    cout<<"Congratulations..YOU WON!!!!!"<<endl;
                    cout<<"You are really good at this.!!"<<endl;
                    qwerty=1;
                    exit(0);
                }
                for(int p=0;p<3;p++)
                {
                    for(int q=0;q<3;q++)
                    {
                        if(matrix[p][q]=='.')
                        {
                            matrix[p][q]='X';
                            temp=1;
                            break;
                        }
                    }
                    if(temp==1)
                        break;
                }
                display(matrix);
                temp=0;
                z = winner(matrix,'X');
                if(z==1)
                {
                    cout<<"Sorry!!You Lost"<<endl;
                    cout<<"Try again!!"<<endl;
                    qwerty=1;
                    exit(0);
                }
            }
            break;
            
        case 2:
            for(w=0;w<5;w++)
            {
                flag=user_insert(matrix);
                if(flag==0)
                {
                    w = w - 1;
                    continue;
                }
                z = winner(matrix,'O');
                if(z==1)
                {
                    display(matrix);
                    cout<<endl;
                    cout<<"Congratulations..YOU WON!!!!!"<<endl;
                    cout<<"You are really good at this.!!"<<endl;
                    qwerty=1;
                    exit(0);
                }
                for(int p=0;p<3;p++)
                {
                    for(int q=0;q<3;q++)
                    {
                        if(matrix[p][q]=='.')
                        {
                            matrix[p][q]='X';
                            temp=1;
                            break;
                        }
                    }
                    if(temp==1)
                        break;
                }
                display(matrix);
                temp=0;
                z = winner(matrix,'X');
                if(z==1)
                {
                    cout<<"Sorry!!You Lost"<<endl;
                    cout<<"Try again!!"<<endl;
                    qwerty=1;
                    exit(0);
                }
            }
            break;
    }
}

