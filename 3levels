                            matrix[0][2] = 'X';
                        else if(checker==4)
                            matrix[1][0] = 'X';
                        else if(checker==5)
                            matrix[1][1] = 'X';
                        else if(checker==6)
                            matrix[1][2] = 'X';
                        else if(checker==7)
                            matrix[2][0] = 'X';
                        else if(checker==8)
                            matrix[2][1] = 'X';
                        else if(checker==9)
                            matrix[2][2] = 'X';
                    }
                }
                cout<<endl;
                display(matrix);
                cout<<endl;
                z = winner(matrix,'X');
                if(z==1)
                {
                    cout<<"Sorry!!You Lost"<<endl;
                    cout<<"Try again!!"<<endl;
                    qwerty=1;
                    exit(0);
                }
                z = winner(matrix,'O');
                if(z==1)
                {
                    cout<<"Congratulations..!!!!!"<<endl;
                    cout<<"You are really good at this.!!"<<endl;
                    qwerty=1;
                    exit(0);
                }
                temp = 0;
            }
        case 3:
            break;
    }
    if(qwerty==0)
    {
        cout<<"You survived me..!!!!!!"<<endl;
        cout<<"Seems like you are a good warrior on this field..."<<endl;
        cout<<"Come back soon.I will defeat you the next time.!"<<endl;
    }

}
