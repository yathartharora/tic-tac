/* Game Level-3 Impossible to defeat */

void level3()
{
    cout<<"1.Computer goes first"<<endl;
    cout<<"2.You go first"<<endl;
    cout<<"Enter choice"<<endl;
    cin>>choice;
    switch(choice)
    {
        case 1:
            matrix[2][2] = 'X';
            display(matrix);
            cout<<endl;
            for(j=0;j<4;j++)
            {
                flag = user_insert(matrix);
                if(flag==0)
                {
                    j = j - 1;
                    continue;
                }
                checker = check(matrix,'O');
                if(checker==0)
                {
                    recv = check(matrix,'X');
                    if(recv==0)
                    {
                        if(matrix[0][0] =='.')
                            matrix[0][0] = 'X';
                        else if(matrix[0][2] =='.')
                            matrix[0][2] = 'X';
                        else if(matrix[2][0] =='.')
                            matrix[2][0] = 'X';
